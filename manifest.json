{
    "name": "Definit",
    "description": "Real-Time Dictionary Companion",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "./img/icon-16x16.png",
        "32": "./img/icon-32x32.png",
        "48": "./img/icon-48x48.png",
        "128": "./img/icon-128x128.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "./popup.html",
        "default_icons": {
            "16": "./img/icon-16x16.png",
            "32": "./img/icon-32x32.png",
            "48": "./img/icon-48x48.png",
            "128": "./img/icon-128x128.png"
        }
    },
    "permissions": [
        "activeTab",
        "tabs", 
        "storage",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": [
        "https://www.google.com/*"
    ]
}